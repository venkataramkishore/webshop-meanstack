.container
	.well
		form.form-horizontal(name="createSubCatForm")
			fieldset
				legend 
					.fa.fa-th  Sub Category
				.form-group
					label.col-md-2.control-lable(for="title") 
						.fa.fa-text-width  Title
					.col-md-10
						input.form-control(name="title", type="text", placeholder="Title", required, ng-model="subcategory.title")
				.form-group
					label.col-md-2.control-lable(for="cattitle") 
						.fa.fa-th-large  Category
					.col-md-10
						select.form-control(name="cattitle", placeholder="Select Category", required, ng-model="subcategory.category_title")
							option(ng-repeat="cat in adminCategories",ng-selected="{{cat.title==subcategory.category_title}}") {{cat.title}}
				.form-group
					label.col-md-2.control-lable(for="desc") 
						.fa.fa-book  Description
					.col-md-10
						textarea.form-control(name="desc", placeholder="Description of Category", required, ng-model="subcategory.description")
.form-group
	.col-md-10.col-md-offset-2
		.pull-right
			button.btn.btn-primary(ng-click="createSubCategory()", ng-disabled="createSubCatForm.$invalid") 
				.fa.fa-save  Submit
			| &nbsp;
			a.btn.btn-default(href="#", ng-click="switchTo('2')") 
				.fa.fa-ban  Cancel