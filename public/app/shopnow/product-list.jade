.container-fluid
	.well
		.row
			.col-xs-6.col-sm-3.col-md-3.col-lg-3.border-tile(ng-repeat="product in productList | filter:prodFilter")
				table.table.table-condenced.table-bordered.table-hover
					tr
						td
							label.text-bold {{product.title}}
					tr
						td
							img(src="{{product.imgUrl}}", width="100", height="100")
					tr
						td
							p
								{{product.description}}
					tr
						td
							label Price : $ {{product.price}}, Available : {{product.available}}
					tr
						td
							a.btn.btn-danger(href="#" ng-show="{{(product.available-product.sold) == 0}}") 
								.fa.fa-shopping-cart
								|  Out of Stock
							a.btn.btn-success(href="#" ng-click="add2Cart(product)",ng-hide="{{product.available-product.sold == 0}}") 
								.fa.fa-shopping-cart
								|  Cart